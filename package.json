{
  "name": "dns-iac",
  "version": "2.0.0",
  "description": "Centralized DNS Infrastructure-as-Code repository for managing DNS records across multiple domains",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "./lib/download.sh",
    "build": "webpack",
    "preview-ci": "run-script-os",
    "preview-ci:darwin": "cd out && ../lib/dnscontrol-Darwin --diff2 preview",
    "preview-ci:linux": "cd out && ../lib/dnscontrol-Linux --diff2 preview",
    "preview-ci:win32": "cd out && ..\\lib\\dnscontrol --diff2 preview",
    "preview": "npm run build && npm run preview-ci",
    "push-ci": "run-script-os",
    "push-ci:darwin": "cd out && ../lib/dnscontrol-Darwin --diff2 push",
    "push-ci:linux": "cd out && ../lib/dnscontrol-Linux --diff2 push",
    "push-ci:win32": "cd out && ..\\lib\\dnscontrol --diff2 push",
    "push": "npm run build && npm run push-ci",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "author": "Vlad Zaharia",
  "license": "MIT",
  "keywords": [
    "dns",
    "infrastructure-as-code",
    "dnscontrol",
    "cloudflare"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.39.2",
    "globals": "^16.0.0",
    "prettier": "^3.8.0",
    "run-script-os": "^1.1.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
