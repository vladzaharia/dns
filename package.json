{
  "name": "polaris-dns-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "pnpm -r --parallel run build",
    "preview": "pnpm --filter @vladzaharia/polaris-dns run preview",
    "push": "pnpm --filter @vladzaharia/polaris-dns run push",
    "lint": "pnpm -r --parallel run lint",
    "lint:fix": "pnpm -r --parallel run lint:fix",
    "format": "pnpm -r --parallel run format",
    "format:check": "pnpm -r --parallel run format:check",
    "typecheck": "pnpm -r --parallel run typecheck",
    "test": "pnpm -r --parallel run test",
    "test:watch": "pnpm -r --parallel run test:watch",
    "docs:dev": "pnpm --filter './docs/*' --parallel run dev",
    "docs:typedoc": "pnpm --filter './docs/*' --parallel run typedoc",
    "act:preview": "act pull_request -e .github/act/pull_request.json -W .github/workflows/preview.yml",
    "act:push": "act push -e .github/act/push.json -W .github/workflows/push.yml",
    "act:validate": "act -j validate -W .github/workflows/preview.yml",
    "act:dry": "act -n -l"
  },
  "author": "Vlad Zaharia",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "devDependencies": {
    "lefthook": "2.1.0"
  }
}
