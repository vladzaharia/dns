{
  "name": "polaris-dns-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "pnpm -r run build",
    "build:dns": "pnpm --filter @vladzaharia/polaris-dns run build",
    "preview": "pnpm --filter @vladzaharia/polaris-dns run preview",
    "push": "pnpm --filter @vladzaharia/polaris-dns run push",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "pnpm -r run format",
    "format:check": "pnpm -r run format:check",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm --filter @vladzaharia/polaris-dns run test",
    "test:watch": "pnpm --filter @vladzaharia/polaris-dns run test:watch",
    "test:coverage": "pnpm --filter @vladzaharia/polaris-dns run test:coverage",
    "test:ui": "pnpm --filter @vladzaharia/polaris-dns run test:ui",
    "test:unit": "pnpm --filter @vladzaharia/polaris-dns run test:unit",
    "test:integration": "pnpm --filter @vladzaharia/polaris-dns run test:integration",
    "test:validation": "pnpm --filter @vladzaharia/polaris-dns run test:validation",
    "test:property": "pnpm --filter @vladzaharia/polaris-dns run test:property",
    "test:snapshot": "pnpm --filter @vladzaharia/polaris-dns run test:snapshot",
    "test:snapshot:update": "pnpm --filter @vladzaharia/polaris-dns run test:snapshot:update",
    "test:e2e": "pnpm --filter @vladzaharia/polaris-dns run test:e2e",
    "test:mutation": "pnpm --filter @vladzaharia/polaris-dns run test:mutation",
    "types:publish": "pnpm --filter @vladzaharia/dnscontrol-types publish",
    "act:preview": "act pull_request -e .github/act/pull_request.json -W .github/workflows/preview.yml",
    "act:push": "act push -e .github/act/push.json -W .github/workflows/push.yml",
    "act:validate": "act -j validate -W .github/workflows/preview.yml",
    "act:dry": "act -n -l"
  },
  "author": "Vlad Zaharia",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "devDependencies": {
    "lefthook": "2.0.15"
  }
}
