{
  "name": "@vladzaharia/dnscontrol-download",
  "version": "1.0.0",
  "description": "Downloads DNSControl binaries for the current platform",
  "type": "module",
  "bin": {
    "dnscontrol-download": "./src/download.ts",
    "dnscontrol-Darwin": "./bin/dnscontrol-Darwin",
    "dnscontrol-Linux": "./bin/dnscontrol-Linux",
    "dnscontrol-Windows": "./bin/dnscontrol-Windows.exe"
  },
  "scripts": {
    "postinstall": "tsx src/download.ts",
    "download": "tsx src/download.ts",
    "download:force": "tsx src/download.ts --force",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "echo 'No tests for dnscontrol-download'",
    "test:watch": "echo 'No tests for dnscontrol-download'",
    "test:coverage": "echo 'No tests for dnscontrol-download'"
  },
  "files": [
    "src/",
    "bin/",
    "README.md"
  ],
  "keywords": [
    "dnscontrol",
    "dns",
    "infrastructure-as-code",
    "binary",
    "download"
  ],
  "author": "Vlad Zaharia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladzaharia/dns.git",
    "directory": "packages/dnscontrol-download"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "tar": "^7.5.7",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@vladzaharia/dns-config": "workspace:*"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}

