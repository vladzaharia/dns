{
  "name": "@vladzaharia/polaris-dns",
  "version": "2.0.0",
  "description": "Centralized DNS Infrastructure-as-Code repository for managing DNS records across multiple domains",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "webpack",
    "preview-ci": "run-script-os",
    "preview-ci:darwin": "cd out && dnscontrol-Darwin --diff2 preview",
    "preview-ci:linux": "cd out && dnscontrol-Linux --diff2 preview",
    "preview-ci:win32": "cd out && dnscontrol --diff2 preview",
    "preview": "pnpm run build && pnpm run preview-ci",
    "push-ci": "run-script-os",
    "push-ci:darwin": "cd out && dnscontrol-Darwin --diff2 push",
    "push-ci:linux": "cd out && dnscontrol-Linux --diff2 push",
    "push-ci:win32": "cd out && dnscontrol --diff2 push",
    "push": "pnpm run build && pnpm run push-ci",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:validation": "vitest run tests/validation",
    "test:property": "vitest run tests/property",
    "test:snapshot": "vitest run tests/snapshot",
    "test:snapshot:update": "vitest run tests/snapshot --update",
    "test:e2e": "vitest run tests/e2e",
    "test:mutation": "stryker run"
  },
  "author": "Vlad Zaharia",
  "license": "MIT",
  "keywords": [
    "dns",
    "infrastructure-as-code",
    "dnscontrol",
    "cloudflare",
    "polaris"
  ],
  "dependencies": {
    "@vladzaharia/dnscontrol-download": "workspace:*",
    "@vladzaharia/dnscontrol-types": "workspace:*"
  },
  "devDependencies": {
    "@vladzaharia/dns-config": "workspace:*",
    "@faker-js/faker": "^10.2.0",
    "@fast-check/vitest": "^0.2.4",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "copy-webpack-plugin": "^13.0.1",
    "fast-check": "^4.5.3",
    "fishery": "^2.4.0",
    "run-script-os": "^1.1.6",
    "ts-loader": "^9.5.4",
    "vitest": "^4.0.17",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}

