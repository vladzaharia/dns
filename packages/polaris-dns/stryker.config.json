{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "vitest",
  "reporters": ["html", "clear-text", "progress"],
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/index.ts"
  ],
  "ignorePatterns": [
    "out/**",
    "coverage/**",
    "lib/**",
    "tests/**"
  ],
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "concurrency": 4,
  "timeoutMS": 60000,
  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,
  "logLevel": "info"
}

